{
  // Coc
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "go",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "markdown",
    "prisma",
    "python",
    "rust",
    "scala",
    "scss",
    "svg",
    "typescript",
    "typescriptreact",
    "vim",
    "vue",
    "xml",
    "yaml"
  ],
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "> ",
  "diagnostic.refreshOnInsertMode": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.rootPatterns": ["package.json"],
  "suggest.echodocSupport": false,
  "suggest.autoTrigger": "always",
  "codeLens.enable": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets/user",
  // Rust
  "rust-analyzer.inlayHints.chainingHints": false,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.procMacro.enable": true,
  // Yaml
  "yaml.format.enable": true,
  // Metals
  "metals.statusBarEnabled": true,
  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.filetypes": ["javascript", "typescript", "vue", "javascriptreact"],
  // Vetur
  "vetur.validation.style": false,
  "vetur.format.enable": false,
  // CSS
  "css.validate": false,
  "scss.validate": false,
  // Typescript/Javascript
  "javascript.validate.enable": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "jsx": "javascriptreact",
    "javascriptreact": "javascriptreact"
  },
  // Snippets
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript", "javascript-jsdoc"]
  },
  // Python
  // "python.pythonPath": "~/dotfiles/python-picker",
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.linting.pylintEnabled": false,
  // Go
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "go.goplsPath": "gopls",
  // Java
  "java.errors.incompleteClasspath.severity": "ignore",

  "java.home": "/usr/lib/jvm/default/",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-14",
      "path": "/usr/lib/jvm/java-14-openjdk/",
      "default": true
    },
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk/"
    },
    {
      "name": "JavaSE-1.8",
      "path": "/usr/lib/jvm/java-8-openjdk/"
    }
  ],
  // TailwindCSS
  "tailwindCSS.htmlLanguages": [
    "HTML (EEx)",
    "HTML (Eex)",
    "blade",
    "edge",
    "eelixir",
    "ejs",
    "elixir",
    "elm",
    "erb",
    "eruby",
    "haml",
    "handlebars",
    "html",
    "html.twig",
    "jade",
    "javascriptreact",
    "jsx",
    "leaf",
    "markdown",
    "njk",
    "nunjucks",
    "php",
    "razor",
    "slim",
    "svelte",
    "twig",
    "vue",
    "pug"
  ],

  // "explorer.icon.enableVimDevicons": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.quitOnOpen": true,
  "explorer.position": "right",
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "i": "cd",

    "gk": "expandablePrev",
    "gj": "expandableNext",

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "O": "expand:recursive",
    "X": "collapse:recursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "o": ["expanded?", "collapse", "expand"],
    "e": "open",
    "s": "open:split",
    "S": "open:split:plain",
    "E": "open:vsplit",
    "t": "open:tab",
    "u": "gotoParent",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    // Change this back to `delete` when trash is working
    "d": "deleteForever",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    // "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",

    "[c": "gitPrev",
    "]c": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
