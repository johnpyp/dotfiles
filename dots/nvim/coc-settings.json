{
  "diagnostic.refreshOnInsertMode": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "javascript",
    "typescript",
    "python",
    "json",
    "jsonc",
    "html",
    "vue",
    "scala",
    "go",
    "clojure"
  ],
  "coc.preferences.rootPatterns": ["package.json"],
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.filetypes": ["javascript", "typescript", "vue"],
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "emmet.includeLanguages": {
    "vue-html": "html"
  },
  "python.pythonPath": "python3",
  "python.formatting.provider": "black",
  "python.jediEnabled": true,
  "python.linting.mypyEnabled": true,
  "rust.wait_to_build": 200,
  "rust.clippy_preference": "on",
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "languageserver": {
    "kotlin": {
      "command": "~/lsp/kotlin-language-server/server/bin/kotlin-language-server",
      "rootPatterns": ["gradle.build"],
      "filetypes": ["kotlin"]
    },
    "metals": {
      "command": "~/lsp/metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "scry": {
      "command": "scry",
      "rootPatterns": ["shards.yml"],
      "filetypes": ["crystal", "cr"]
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "~/lsp/clojure/clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "initializationOptions": {}
    }
  },
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "> "
}
