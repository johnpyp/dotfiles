{
  // Coc
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "go",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "markdown",
    "python",
    "rust",
    "scala",
    "scss",
    "svg",
    "typescript",
    "vim",
    "vue",
    "xml",
    "yaml"
  ],
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "> ",
  "diagnostic.refreshOnInsertMode": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.rootPatterns": ["package.json"],
  "suggest.echodocSupport": true,
  "suggest.autoTrigger": "always",
  "codeLens.enable": false,
  // Yaml
  "yaml.format.enable": true,
  // Metals
  "metals.statusBarEnabled": true,
  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.filetypes": ["javascript", "typescript", "vue", "javascriptreact"],
  // Vetur
  "vetur.validation.style": false,
  "vetur.format.enable": false,
  // CSS
  "css.validate": false,
  "scss.validate": false,
  // Typescript/Javascript
  "javascript.validate.enable": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "jsx": "javascriptreact",
    "javascriptreact": "javascriptreact"
  },
  // Snippets
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript", "javascript-jsdoc"]
  },
  // Python
  "python.pythonPath": "python",
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,
  // Go
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "go.goplsPath": "gopls",
  // Java
  "java.errors.incompleteClasspath.severity": "ignore",
  // TailwindCSS
  "tailwindCSS.htmlLanguages": [
    "HTML (EEx)",
    "HTML (Eex)",
    "blade",
    "edge",
    "eelixir",
    "ejs",
    "elixir",
    "elm",
    "erb",
    "eruby",
    "haml",
    "handlebars",
    "html",
    "html.twig",
    "jade",
    "javascriptreact",
    "jsx",
    "leaf",
    "markdown",
    "njk",
    "nunjucks",
    "php",
    "razor",
    "slim",
    "svelte",
    "twig",
    "vue",
    "pug"
  ]
}
