{
  // Coc
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "cs",
    "csharp",
    "css",
    "go",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "lua",
    "markdown",
    "nix",
    "prisma",
    "python",
    "rust",
    "scala",
    "scss",
    "svg",
    "toml",
    "typescript",
    "typescriptreact",
    "vim",
    "vim",
    "vue",
    "xml",
    "yaml"
  ],

  "omnisharp.path": "omnisharp",
  "languageserver": {
    "kotlin": {
      "command": "~/lsp/kotlin-language-server/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    }
  },
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "> ",
  "diagnostic.refreshOnInsertMode": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.rootPatterns": ["package.json"],
  "coc.source.emoji.filetypes": ["markdown", "javascript", "typescript"],
  "suggest.echodocSupport": false,
  "suggest.autoTrigger": "always",
  "codeLens.enable": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets/user",

  // Rust
  "rust-analyzer.inlayHints.chainingHints": false,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.diagnostics.disabled": ["macro-error"],
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.rustfmt.extraArgs": [
    "--config",
    "group_imports=StdExternalCrate,merge_imports=true"
  ],
  // Yaml
  "yaml.format.enable": true,
  "yaml.schemas": {},
  "yaml.schemaStore.enable": true,
  // Metals
  "metals.statusBarEnabled": true,
  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "workspace.bottomUpFiletypes": ["javascript", "typescript"],
  "workspace.workspaceFolderCheckCwd": false,
  // Vetur
  "vetur.validation.style": false,
  "vetur.format.enable": true,
  // CSS
  "css.validate": false,
  "scss.validate": false,
  // Typescript/Javascript
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.validate.enable": true,
  "javascript.suggest.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.suggestionActions.enabled": true,
  "tsserver.log": "verbose",
  "tsserver.maxTsServerMemory": 2048,
  "tsserver.disableAutomaticTypeAcquisition": false,
  "tsserver.useBatchedBufferSync": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.workspaceSymbols.scope": "currentProject",
  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "jsx": "javascriptreact",
    "javascriptreact": "javascriptreact"
  },
  // Snippets
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript", "javascript-jsdoc"]
  },
  // Python
  // "python.pythonPath": "~/dotfiles/python-picker",
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,

  "pyright.organizeimports.provider": "pyright",
  "pyright.completion.snippetSupport": true,
  "python.analysis.autoImportCompletions": true,
  // Go
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "go.goplsPath": "gopls",
  // Java
  "java.errors.incompleteClasspath.severity": "ignore",

  // Lua
  "Lua.workspace.library": {
    "/usr/share/nvim/runtime/lua": true,
    "/usr/share/nvim/runtime/lua/vim": true,
    "/usr/share/nvim/runtime/lua/vim/lsp": true
  },
  "Lua.diagnostics.globals": ["vim"],
  // TailwindCSS
  "tailwindCSS.htmlLanguages": [
    "HTML (EEx)",
    "HTML (Eex)",
    "blade",
    "edge",
    "eelixir",
    "ejs",
    "elixir",
    "elm",
    "erb",
    "eruby",
    "haml",
    "handlebars",
    "html",
    "html.twig",
    "jade",
    "javascriptreact",
    "jsx",
    "leaf",
    "markdown",
    "njk",
    "nunjucks",
    "php",
    "razor",
    "slim",
    "svelte",
    "twig",
    "vue",
    "pug"
  ],

  // "explorer.icon.enableVimDevicons": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.quitOnOpen": true,
  "explorer.position": "right",
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "i": "cd",

    "gk": "expandablePrev",
    "gj": "expandableNext",

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "h": "collapse",
    "J": ["wait", "toggleSelection", "normal:j"],
    "K": ["wait", "toggleSelection", "normal:k"],
    "O": "expand:recursive",
    "X": "collapse:recursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],

    "o": ["wait", "expanded?", "collapse", "expand"],
    "<cr>": [
      "wait",
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "l": ["wait", "expandable?", ["expanded?", "collapse", "expand"], "open"],
    "e": "open",
    "s": "open:split",
    "S": "open:split:plain",
    "E": "open:vsplit",
    "t": "open:tab",
    "u": "gotoParent",
    "gp": "preview:labeling",

    "yp": "copyFilepath",
    "yn": "copyFilename",
    "yy": "copyFile",
    "dd": "cutFile",
    "p": "pasteFile",

    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    // "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",

    "[c": "gitPrev",
    "]c": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
