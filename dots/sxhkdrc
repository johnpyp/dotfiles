XF86MonBrightness{Down, Up}
  light -{U, A} 10

mod4 + d
  /nix/store/gygywxb8k6l5vms2bkcsfdnfrm42bgkk-rofi-1.5.4/bin/rofi -show run -show-icons -theme Arc-Dark

mod4 + shift + space
  i3-msg floating toggle

mod4 + shift + x
  i3-msg scratchpad toggle

mod4 + shift + {1-9}
  i3-msg move container to workspace number {1-9}; workspace {1-9}

mod4 + shift + {bracketleft, bracketright}
  i3-msg move workspace to output {left, right}

mod4 + shift + {c, r, q}
  i3-msg {reload, restart, kill}

mod4 + x
  i3-msg scratchpad show

mod4 + {1-9}
  i3-msg workspace number {1-9}

mod4 + {_, shift +} {h, j, k, l}
  i3-msg {focus, move} {left, down, up, right}

mod4 + {grave, Tab}
  /nix/store/gygywxb8k6l5vms2bkcsfdnfrm42bgkk-rofi-1.5.4/bin/rofi -show {drun, window} -modi drun,window -show-icons -sidebar-mode -theme Arc-Dark

mod4 + {q, f}
  i3-msg {split, fullscreen} toggle

mod4 + {r, 0}
  i3-msg mode {resize, $mode_system}

mod4 + Return
  alacritty

mod4 + Escape
  pkill sxkhd && sxkhd &

mod4 + p
  flameshot gui

Print
  flameshot screen -c
