#!/usr/bin/env bash

sxhkd -c $HOME/.config/sxhkd/sxhkdrc.bspwm &
nm-applet &
redshift-gtk &
picom -b &
feh --bg-fill $HOME/dotfiles/wallpapers/current.png &

xmodmap $HOME/.Xmodmap &
setxkbmap -option 'caps:escape, altwin:swap_alt_win' -layout us &

$HOME/.scripts/flat-mice &
$HOME/.config/polybar/launch.sh &

#polybar --config=$HOME/dotfiles/common/bspwm/polybar myBar &
#/bin/sh $HOME/dotfiles/common/scripts/system.sh
#nm-applet &
#emacs --daemon &
#numlockx &
#seafile-applet &
#sct 3500 &

bspc monitor -d I II III IV V VI VII VIII IX X
#/home/user/dotfiles/common/scripts/monitor-hotplug.sh

bspc config focus_follows_pointer true

bspc config border_width         2
bspc config window_gap           0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config remove_unplugged_monitors true
bspc config remove_disabled_monitors true
bspc merge_overlapping_monitors true

bspc config normal_border_color
bspc config active_border_color  \#145f9d
bspc config focused_border_color \#145f9d

